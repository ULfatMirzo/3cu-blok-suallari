using System;
using System.Collections.Generic;

class User
{
    public string Name { get; set; }
    public int Age { get; set; }
    public string Email { get; set; }

    public void PrintInfo()
    {
        Console.WriteLine($"Ad: {Name}, Ya≈ü: {Age}, Email: {Email}");
    }
}

class Program
{
    static void Main()
    {
        List<User> users = new List<User>();
        bool continueInput = true;

        Console.WriteLine("üë§ ƒ∞stifad…ô√ßi m…ôlumatƒ± daxil etm…ô sistemi");
        Console.WriteLine("Bir ne√ß…ô istifad…ô√ßi daxil ed…ô bil…ôrsiniz.\n");

        while (continueInput)
        {
            User user = new User();

            Console.Write("Ad daxil edin: ");
            user.Name = Console.ReadLine();

            Console.Write("Ya≈ü daxil edin: ");
            user.Age = int.Parse(Console.ReadLine());

            Console.Write("Email daxil edin: ");
            user.Email = Console.ReadLine();

            users.Add(user);

            Console.Write("\nDavam etm…ôk ist…ôyirsiniz? (beli/xeyr): ");
            string answer = Console.ReadLine().ToLower();

            if (answer != "beli" && answer != "he" && answer != "h…ô")
            {
                continueInput = false;
            }
            Console.WriteLine();
        }

        Console.WriteLine("‚úÖ B√ºt√ºn daxil edil…ôn istifad…ô√ßil…ôr:");
        foreach (var u in users)
        {
            u.PrintInfo();
        }
    }
}
