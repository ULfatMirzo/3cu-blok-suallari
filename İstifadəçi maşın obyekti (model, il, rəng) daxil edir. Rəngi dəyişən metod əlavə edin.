using System;

class Car
{
    public string Model { get; set; }
    public int Year { get; set; }
    public string Color { get; set; }

    public void ChangeColor(string newColor)
    {
        Color = newColor;
    }

    public void PrintInfo()
    {
        Console.WriteLine($"üöó Model: {Model}, ƒ∞l: {Year}, R…ông: {Color}");
    }
}

class Program
{
    static void Main()
    {
        Car car = new Car();

        Console.Write("Ma≈üƒ±n modeli: ");
        car.Model = Console.ReadLine();

        Console.Write("ƒ∞l: ");
        car.Year = int.Parse(Console.ReadLine());

        Console.Write("R…ông: ");
        car.Color = Console.ReadLine();

        Console.WriteLine("\n∆èvv…ôl:");
        car.PrintInfo();

        Console.Write("\nYeni r…ông daxil et: ");
        string newColor = Console.ReadLine();
        car.ChangeColor(newColor);

        Console.WriteLine("\nD…ôyi≈üiklikd…ôn sonra:");
        car.PrintInfo();
    }
}
