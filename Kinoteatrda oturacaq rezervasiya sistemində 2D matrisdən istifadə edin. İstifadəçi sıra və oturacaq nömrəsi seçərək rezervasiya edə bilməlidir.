using System;

class Program
{
    static bool[,] seats = new bool[5, 10]; // 5 sÄ±ra, 10 oturacaq

    static void ReserveSeat()
    {
        Console.Write("SÄ±ra nÃ¶mrÉ™sini daxil et (1-5): ");
        int row = int.Parse(Console.ReadLine()) - 1;

        Console.Write("Oturacaq nÃ¶mrÉ™sini daxil et (1-10): ");
        int seatNumber = int.Parse(Console.ReadLine()) - 1;

        if (row < 0 || row >= seats.GetLength(0) || seatNumber < 0 || seatNumber >= seats.GetLength(1))
        {
            Console.WriteLine("âŒ YanlÄ±ÅŸ sÄ±ra vÉ™ ya oturacaq nÃ¶mrÉ™si.");
            return;
        }

        if (seats[row, seatNumber])
        {
            Console.WriteLine("âŒ Bu oturacaq artÄ±q rezervasiya olunub.");
        }
        else
        {
            seats[row, seatNumber] = true;
            Console.WriteLine($"âœ… Rezervasiya uÄŸurla edildi: SÄ±ra {row + 1}, Oturacaq {seatNumber + 1}");
        }
    }

    static void ShowSeats()
    {
        Console.WriteLine("\nKinoteatr oturacaqlarÄ± (X - rezervasiya olunub, O - boÅŸ):");
        for (int i = 0; i < seats.GetLength(0); i++)
        {
            Console.Write($"SÄ±ra {i + 1}: ");
            for (int j = 0; j < seats.GetLength(1); j++)
            {
                Console.Write(seats[i, j] ? "X " : "O ");
            }
            Console.WriteLine();
        }
    }

    static void Main()
    {
        bool running = true;

        Console.WriteLine("ğŸ¬ Kinoteatr Rezervasiya SisteminÉ™ xoÅŸ gÉ™ldiniz!");
        Console.WriteLine("ÆmrlÉ™r: reserve, show, exit");

        while (running)
        {
            Console.Write("\nÆmr daxil edin: ");
            string command = Console.ReadLine().ToLower();

            switch (command)
            {
                case "reserve":
                    ReserveSeat();
                    break;
                case "show":
                    ShowSeats();
                    break;
                case "exit":
                    running = false;
                    Console.WriteLine("ğŸ‘‹ Ã‡Ä±xÄ±ÅŸ edildi. SaÄŸ olun!");
                    break;
                default:
                    Console.WriteLine("â— NamÉ™lum É™mr. Ä°stifadÉ™: reserve, show, exit");
                    break;
            }
        }
    }
}
