using System;

class Program
{
    static void Main()
    {
        Console.Write("Ne√ß…ô element daxil ed…ôc…ôksiniz? ");
        int n = int.Parse(Console.ReadLine());
        int[] original = new int[n];

        for (int i = 0; i < n; i++)
        {
            Console.Write($"Element {i + 1}: ");
            original[i] = int.Parse(Console.ReadLine());
        }

        Console.WriteLine("\nDaxil edil…ôn orijinal massiv:");
        PrintArray(original);

        // Deep copy: yeni massiv yaradƒ±lƒ±r v…ô elementl…ôr k√∂√ß√ºr√ºl√ºr
        int[] deepCopy = new int[original.Length];
        Array.Copy(original, deepCopy, original.Length);

        Console.Write("\nKopyada hansƒ± indeksd…ôki elementi d…ôyi≈üm…ôk ist…ôyirsiniz? (0-dan ba≈ülayƒ±r): ");
        int index = int.Parse(Console.ReadLine());

        Console.Write("Yeni d…ôy…ôri daxil edin: ");
        int newValue = int.Parse(Console.ReadLine());

        deepCopy[index] = newValue;

        Console.WriteLine("\nüîç Kopya d…ôyi≈üdirildikd…ôn sonra:");

        Console.WriteLine("Orijinal massiv:");
        PrintArray(original);

        Console.WriteLine("Deep copy massiv:");
        PrintArray(deepCopy);

        Console.WriteLine("\nüìå G√∂rd√ºy√ºn√ºz kimi, deep copy d…ôyi≈üdiril…ônd…ô orijinal d…ôyi≈ümir.");
    }

    static void PrintArray(int[] arr)
    {
        foreach (var item in arr)
        {
            Console.Write(item + " ");
        }
        Console.WriteLine();
    }
}
