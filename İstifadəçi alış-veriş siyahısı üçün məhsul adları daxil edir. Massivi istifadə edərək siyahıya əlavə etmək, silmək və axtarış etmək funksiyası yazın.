using System;
using System.Collections.Generic;

class Program
{
    static List<string> shoppingList = new List<string>();

    static void AddItem()
    {
        Console.Write("ÆlavÉ™ etmÉ™k istÉ™diyiniz mÉ™hsulun adÄ±nÄ± daxil edin: ");
        string item = Console.ReadLine();
        shoppingList.Add(item);
        Console.WriteLine($"âœ… {item} siyahÄ±ya É™lavÉ™ olundu.");
    }

    static void RemoveItem()
    {
        Console.Write("SilmÉ™k istÉ™diyiniz mÉ™hsulun adÄ±nÄ± daxil edin: ");
        string item = Console.ReadLine();
        if (shoppingList.Remove(item))
            Console.WriteLine($"âœ… {item} siyahÄ±dan silindi.");
        else
            Console.WriteLine($"âŒ {item} siyahÄ±da tapÄ±lmadÄ±.");
    }

    static void SearchItem()
    {
        Console.Write("Axtarmaq istÉ™diyiniz mÉ™hsulun adÄ±nÄ± daxil edin: ");
        string item = Console.ReadLine();
        if (shoppingList.Contains(item))
            Console.WriteLine($"ğŸ” {item} siyahÄ±da mÃ¶vcuddur.");
        else
            Console.WriteLine($"ğŸ” {item} siyahÄ±da yoxdur.");
    }

    static void ShowList()
    {
        Console.WriteLine("\nğŸ›’ AlÄ±ÅŸ-veriÅŸ siyahÄ±sÄ±:");
        if (shoppingList.Count == 0)
        {
            Console.WriteLine("SiyahÄ± boÅŸdur.");
