                case "exit":
                    running = false;
                    Console.WriteLine("ğŸ‘‹ Proqramdan Ã§Ä±xdÄ±nÄ±z. SaÄŸ olun!");
                    break;
                default:
                    Console.WriteLine("â— NamÉ™lum É™mr. ZÉ™hmÉ™t olmasa [add, remove, search, show, exit] istifadÉ™ edin.");
