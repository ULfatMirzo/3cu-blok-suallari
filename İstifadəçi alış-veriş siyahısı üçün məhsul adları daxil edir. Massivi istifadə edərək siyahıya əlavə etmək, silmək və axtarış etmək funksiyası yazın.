        {
            Console.WriteLine($"{i++}. {item}");
        }
    }

    static void Main()
    {
        bool running = true;

        Console.WriteLine("ğŸ›ï¸ AlÄ±ÅŸ-veriÅŸ siyahÄ±sÄ± proqramÄ±na xoÅŸ gÉ™lmisiniz!");
        Console.WriteLine("ÆmrlÉ™r: add, remove, search, show, exit");

        while (running)
        {
            Console.Write("\nÆmr daxil edin: ");
